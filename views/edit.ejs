<%- include("partials/header"); %>

     <div id="new" class="ui main text container segment">
        <div class="ui huge header">Edit <%= blog.name %></div>
        <form action="/blogs/<%= blog._id%>?_method=PUT" method="POST" class="ui form">
            <div class="field">
                <label for="">Title</label>
                <input type="text" name="blog[name]" value="<%= blog.name %>">

            </div>
            <div class="field">
                    <label for="">Image</label>
                    <input type="text" name="blog[image]" value="<%= blog.image %>" >
           </div>
           <div class="field">
                <label for="">Blog Post</label>
                <textarea name="blog[body]" id="" cols="30" rows="10" ><%= blog.body %></textarea>

       </div>
       <button class="ui inverted primary button">DONE</button>
<a class="ui button" href="/blogs/<%= blog._id%>">Go Back</a>
      </form>

        
     </div>
  
<%- include("partials/footer"); %>